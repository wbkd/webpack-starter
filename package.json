{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "A light foundation for your next frontend project based on webpack.",
  "keywords": [
    "webpack",
    "startkit",
    "frontend",
    "es6",
    "javascript",
    "webdev"
  ],
  "bugs": {
    "url": "https://github.com/wbkd/webpack-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wbkd/webpack-starter.git"
  },
  "license": "MIT",
  "author": "webkid.io",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.prod.js",
    "lint": "yarn lint:styles && yarn lint:scripts",
    "lint:scripts": "eslint src/ --cache --fix",
    "lint:styles": "stylelint src/ --fix",
    "prepare": "husky install",
    "start": "webpack serve --config webpack/webpack.config.dev.js",
    "sort": "sort-package-json",
    "update": "ncu -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "yarn lint:scripts",
    "*.css": "yarn lint:styles",
    "*.sass": "yarn lint:styles",
    "*.scss": "yarn lint:styles",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "core-js": "^3.15.2",
    "postcss": "^8.3.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.14.8",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-loader": "^4.0.2",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "mini-css-extract-plugin": "^2.1.0",
    "node-sass": "^6.0.1",
    "npm-check-updates": "^11.8.3",
    "postcss-loader": "^6.1.1",
    "sass-loader": "^12.1.0",
    "sort-package-json": "^1.50.0",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "webpack": "^5.47.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  }
}
